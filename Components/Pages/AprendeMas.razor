@page "/aprende_mas"
@rendermode InteractiveServer

<PageTitle>Aprende Más</PageTitle>

<h1 style="text-align: center;">Recursos para Aprender Blazor</h1>

<div class="row">
@foreach (var video in videos)
{
    <div class="col-md-4 video-container">
        <h2 style="text-align: center;">@video.Titulo</h2>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/@video.Url" 
                title="@video.Titulo" frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen></iframe>
        <a href="https://www.youtube.com/watch?v=@video.Url" target="_blank">
            <button class="btn-youtube">Ver en YouTube</button>
        </a>
    </div>
}
</div>

@code {
    
    class Video {
        public string Titulo { get; set; }
        public string Url { get; set; }
    }

    List<Video> videos = new List<Video> {
        new Video { Titulo = "¿Qué es Blazor?", Url = "weda0npFxtk" },
        new Video { Titulo = "Estructura de una plantilla Blazor WebAssembly", Url = "sX5W68oerqQ" },
        new Video { Titulo = "Sistema de Venta en Blazor y NET 7", Url = "dNq3A-EtOdk" },
        new Video { Titulo = "Sistema de Biblioteca en Blazor y NET 7", Url = "PKwFsMggnmQ" },
        new Video { Titulo = "6 librerías de componentes Blazor para que tu aplicación se vea más profesional que nunca", Url = "Xu4rqjz7CHg" },
        new Video { Titulo = "Cómo crear Despegables en Cascada en Blazor", Url = "Gl694_BH07w" }
    };
}

<style>
    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; 
    }

    .col-md-4 {
        flex: 0 0 33.33%; 
        max-width: 33.33%;
        padding: 10px;
        box-sizing: border-box; 
    }

    h2 {
        font-weight: bold;
        margin-top: 0;
        text-align: center; 
    }

    iframe {
        width: 100%;
        height: 200px;
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    iframe:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .video-container {
        margin: 20px;
        background-color: #f7f7f7;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        display: flex;
        flex-direction: column; 
        align-items: center; 
    }

    .video-container:hover {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .btn-youtube {
        background-color: red; 
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        background-size: 20px 20px;
        background-position: 10px 10px;
        background-repeat: no-repeat;
        padding-left: 35px;
        margin-top: 10px; 
    }

    .btn-youtube:hover {
        background-color: darkred; 
    }
</style>

