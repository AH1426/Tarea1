        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1); 
    }

    .alert-description {
        font-size: 20px; 
        color: #34495e; 
        text-align: center;
        margin-bottom: 20px;
        padding: 15px;
        background-color: #e7f3fe; /* Fondo azul claro */
        border-left: 6px solid #2196F3; /* Borde azul */
        border-radius: 5px;
    }

    .input-container {
        display: flex;
        justify-content: center; 
        margin-bottom: 20px;
    }

    .label {
        font-weight: bold;
        margin-right: 10px;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ccc;
