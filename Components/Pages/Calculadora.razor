@page "/Calculadora"
@rendermode InteractiveServer

<PageTitle>Calculadora</PageTitle>

<div class="calculator-container">
    <div class="header-container"> 
        <h1>Calculadora</h1>
        <p>Calculadora de operaciones b√°sicas</p>
    </div>

    <div class="input-container">
        <div>
            <label>Numero 1:</label>
            <input type="number" @bind="N1" class="form-control" />
        </div>

        <div>
            <label>Numero 2:</label>
            <input type="number" @bind="N2" class="form-control" />
        </div>
    </div>

    <div class="button-container mt-3">
        <button @onclick="Sumar" class="btn btn-primary">Sumar</button>
        <button @onclick="Restar" class="btn btn-primary">Restar</button>
        <button @onclick="Multiplicar" class="btn btn-primary">Multiplicar</button>
        <button @onclick="Dividir" class="btn btn-primary">Dividir</button>
        <button @onclick="Limpiar" class="btn btn-danger">Limpiar</button> 
    </div>

    <div class="mt-3">
        <label>Resultado:</label>
        <div class="form-control">
            @Resultado
        </div>
    </div>
</div>

@code {
    private double N1 = 0;
    private double N2 = 0;
    private double Resultado = 0;

    private void Sumar() {
        Resultado = N1 + N2;
    }

    private void Restar() {
        Resultado = N1 - N2;
    }

    private void Multiplicar() {
        Resultado = N1 * N2;
    }

    private void Dividir() {
        Resultado = N1 / N2;

    }

    private void Limpiar() {
        N1 = 0;
        N2 = 0;
        Resultado = 0;
    }
}

